<div class="container text-center">
    <h2>{{title}}</h2>
    </p>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h3>Insert Data</h3>
            <form action="/insert" method="post">
                <div class="form-group">
                    <input type="text" id="title" name="title" class="form-control" placeholder="title">
                </div>
                <div class="form-group">
                    <input type="text" id="content" name="content" class="form-control" placeholder="content..">
                </div>
                <div class="form-group">
                    <input type="text" id="author" name="author" class="form-control" placeholder="author" >
                </div>
                <button type="submit" class="btn btn-primary">INSERT</button>
            </form>
        </div>
        <div class="col-md-3">
            <h3>Get Data</h3>
            <a href="/get-data" class="btn btn-success">LOAD DATA</a>
            <br><br>
            <div class="panel-group">
                {{# each items }}
                <div class="panel panel-default">
                    <div class="panel-heading">ID: {{this.id}}</div>
                    <div class="panel-heading">Title: {{this.title}}</div>
                    <div class="panel-body">Content: {{this.content}}</div>
                     <div class="panel-footer">Author: {{this.author}}</div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="col-md-3">
            <h3>Update Data</h3>
            <form action="/update" method="post">
                <div class="form-group">
                    <input type="text" id="id" name="id" class="form-control" placeholder="id">
                </div>
                <div class="form-group">
                    <input type="text" id="title" name="title" class="form-control" placeholder="title...">
                </div>
                <div class="form-group">
                    <input type="text" id="content" name="content" class="form-control" placeholder="content..">
                </div>
                <div class="form-group">
                    <input type="text" id="author" name="author" class="form-control" placeholder="author">
                </div>
                <button type="submit" class="btn btn-warning">UPDATE</button>
            </form>
        </div>

        <div class="col-md-3">
            <h3>Delete Data</h3>
            <form action="/delete" method="post">
                <div class="form-group">
                    <input type="text" id="id" name="id" class="form-control" placeholder="id">
                </div>
                <button type="submit" class="btn btn-danger">DELETE</button>
            </form>
        </div>
    </div>
</div>